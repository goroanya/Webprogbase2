<!doctype html>
<html lang="en">

<head>

  {{>head}}
  <title>Create new picture </title>
  <meta name="description" content="New picture">
  <title>Update picture</title>
  <meta name="description" content="New picture">



</head>

<body class="text-center" style="width: 100%; height:100%; background-color: #333;">

  {{>menu}}

  <input type="hidden" name="album_name" value="{{pic.album.name}}">
  <input type="hidden" name="old_short_name" value="{{pic.short_name}}">
  <input type="hidden" name="id" value="{{pic.id}}">

  <div class="album-photo-form ">
    <div class="container">

      <form action="/update/picture" method="POST" enctype="multipart/form-data">
        <fieldset>
          <legend class="legend"> Update picture </legend>

          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              <input id="short_name" name="short_name" value="{{pic.short_name}}" type="text" placeholder="Short uniqe name for your photo"
                class="form-control input-md" required="" pattern="[a-zA-Z][A-Za-z0-9_.]{1,15}" title=" name must start with a letter ,could contain only letters (either case), numbers, point and the underscore, no spaces; at least 1 characters but no more than 15 characters">

            </div>
          </div>


          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              <textarea class="form-control" id="description" name="description" placeholder="enter the description of picture..."> {{pic.description}} </textarea>
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              <p id ="error-message" class="mt-3 mb-3 error-message"></p>
              <hr color='white' />
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <div class="col-md-4">

              <button id="albumUpdateButton" class="btn btn-outline-light" data-toggle="modal" data-target="#updateModal">Update</button>

            </div>
          </div>
        </fieldset>

      </form>

    </div>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="updateModal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalCenterTitle">Are you sure?</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <p>You are about to update album.</p>
        </div>
        <div class="modal-footer">
          <form  id="updateForm">
            <button type="submit" id="confirmUpdateButton" class="btn btn-dark">Update</button>
          </form>
        </div>
      </div>
    </div>
  </div>


  {{>footer}}

</body>

</html>