<!doctype html>
<html lang="en">

<head>

  {{>head}}
  <title>Create new picture </title>
  <meta name="description" content="New picture">



</head>

<body class="text-center" style="width: 100%; height:100%; background-color: #333;">

  {{>menu}}

  <div class="album-photo-form ">
    <div class="container">

      <form action="/new/picture" method="POST" enctype="multipart/form-data">
        <fieldset>

          {{#album_name}}
          <legend class="legend">Add picture to "{{album_name}}"</legend>
          <input type="hidden" name="album_name" value="{{album_name}}">

          {{/album_name}}

          {{^album_name}}
          <legend class="legend">Add new temporary picture </legend>
          {{/album_name}}


          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              <input id="short_name" name="short_name" type="text" placeholder="Short uniqe name for your photo" class="form-control input-md"
                required="" pattern="[a-zA-Z][A-Za-z0-9_.]{1,15}" title=" name must start with a letter ,could contain only letters (either case), numbers, point and the underscore, no spaces; at least 1 characters but no more than 15 characters">

            </div>
          </div>


          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              <textarea class="form-control" id="textarea" name="description" placeholder="enter the description of picture..."></textarea>
            </div>
          </div>


          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              <input name="pictureFile" class="file-input" type="file" accept="image/*" required>

            </div>
          </div>


          {{#albums}}

          <div class="form-group row justify-content-center">
            <label class="col-md-4 control-label">Add the existing album or to new </label>
            <div class="col-md-4">

              <input list="albums_list" name="album_name">
              <datalist id="albums_list">
                <option value={{name}}>{{name}}</option>
              </datalist>
            </div>
          </div>
          {{/albums}}


          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              {{#message}}
              <p class="mt-3 mb-3 error-message">{{message}}</p>
              {{/message}}
              <hr color='white' />
            </div>
          </div>

          <div class="form-group row justify-content-center">
            <div class="col-md-4">
              <button type="submit" name="submit" class="btn btn-outline-light">Submit</button>
            </div>
          </div>


        </fieldset>

      </form>

    </div>
  </div>




  {{>footer}}

  </body>

</html>